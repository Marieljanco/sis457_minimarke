@model WebMinimarke.Models.Inventario

@{
    ViewData["Title"] = "Editar Inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar inventario</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">IdProducto</label>
                <select asp-for="IdProducto" class="form-control" asp-items="ViewBag.IdProducto"></select>
                <span asp-validation-for="IdProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">IdProveedor</label>
                @* <select asp-for="IdProveedor" class="form-control" asp-items="ViewBag.IdProveedor"></select> *@
                <input asp-for="IdProveedor" class="form-control" />
                <span asp-validation-for="IdProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">IdEmpleado</label>
                <select asp-for="IdEmpleado" class="form-control" asp-items="ViewBag.IdEmpleado"></select>
                <span asp-validation-for="IdEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cantidad Stock</label>
                <input asp-for="CantidadStock" class="form-control" />
                <span asp-validation-for="CantidadStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">FechaUltimaReposicion</label>
                <input asp-for="FechaUltimaRepocision" class="form-control" />
                <span asp-validation-for="FechaUltimaRepocision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
